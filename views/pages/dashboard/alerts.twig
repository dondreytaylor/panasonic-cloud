<div class="emit-heading">
	<h1>My Alerts</h1>
	<p>You have a total of <strong>[[alerts.length]]</strong> <span ng-if="alerts.length === 1">alert</span><span ng-if="alerts.length > 1">alerts</span>.</p>
</div>
<div class="emit-form" role="form">
	<div class="emit-data-list">
		<div class="emit-data-list-entry" ng-repeat="alert in alerts">
			<h2>[[alert.text]]</h2>
			<div><strong>Scheduled for</strong> [[alert.scheduled]] <span>|</span> <strong>Frequency:</strong> [[alert.frequency]]</div>
		</div>
	</div>
</div>
<div id="emit-sidebar">
	<div class="emit-sidebar-option" ng-click="path('/dashboard')">
		<i class="icon icon-home"></i>
		<span>Dashboard</span>
	</div>
	<div class="emit-sidebar-option" ng-click="path('/dashboard/profile')">
		<i class="icon icon-edit"></i>
		<span>My Profile</span>
	</div>
	<div class="emit-sidebar-option" ng-click="path('/dashboard/vitals')">
		<i class="icon icon-heart"></i>
		<span>My Vitals</span>
	</div>
	<div class="emit-sidebar-option" ng-click="path('/')">
		<i class="icon icon-exit"></i>
		<span>Sign Out</span>
	</div>      
</div>