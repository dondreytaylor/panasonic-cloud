<div class="emit-heading">
	<h1>My Password</h1>
	<p>
		Update your password by providing the following details
	</p>
</div>
<div class="emit-form" role="form">
	<div class="form-group">
		<div class="input-group">
			<span class="input-group-addon"><i class="icon icon-lock"></i></span>
			<input type="password" class="form-control" placeholder="Current Password">
		</div>
	</div>
	<div class="form-group">
		<div class="input-group">
			<span class="input-group-addon"><i class="icon icon-lock"></i></span>
			<input type="password" class="form-control" placeholder="New Password">
		</div>
	</div>
	<div class="form-group">
		<div class="input-group">
			<span class="input-group-addon"><i class="icon icon-lock"></i></span>
			<input type="password" class="form-control" placeholder="Re-Type New Password">
		</div>
	</div>
	<button class="btn btn-primary btn-block btn-lg" ng-click="popup.show('Password Changed','icon-lock', true, 'Your password has been successfully changed.')">Change Password</button>
</div>

<div id="emit-sidebar">
	<div class="emit-sidebar-option" ng-click="path('/dashboard')">
		<i class="icon icon-home"></i>
		<span>Dashboard</span>
	</div>
	<div class="emit-sidebar-option" ng-click="path('/dashboard/profile')">
		<i class="icon icon-edit"></i>
		<span>My Profile</span>
	</div>
	<div class="emit-sidebar-option" ng-click="path('/dashboard/vitals')">
		<i class="icon icon-heart"></i>
		<span>My Vitals</span>
	</div>
	<div class="emit-sidebar-option" ng-click="path('/')">
		<i class="icon icon-exit"></i>
		<span>Sign Out</span>
	</div>		
</div>

