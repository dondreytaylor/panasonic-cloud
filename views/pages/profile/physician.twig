<div class="emit-heading">
	<h1>Add Physicians</h1>
	<p>
		Provide the following to add a guardian to your profile. To view physicians go <a href="/dashboard/profile/physicianlist">here</a>.
	</p>
</div>
<div class="emit-form" role="form">
	<div class="form-group">
		<input ng-model="cache.fullname" type="text" class="form-control" placeholder="Full Name">
	</div>
	<div class="form-group">
		<input ng-model="cache.affiliation" type="text" class="form-control" placeholder="Hospital Affiliations (Seperate each using a comma)">
	</div>
	<div class="form-group">
		<input ng-model="cache.primary" type="text" class="form-control" placeholder="Primary Contact Number">
	</div>
	<div class="form-group">
		<input ng-model="cache.secondary" type="text" class="form-control" placeholder="Secondary Contact Number">
	</div>
	<div class="form-group">
		<input ng-model="cache.emailaddr" type="text" class="form-control" placeholder="Email Address">
	</div>
	<div class="form-group">
		<label>Choose Gender:</label>&nbsp;&nbsp;
		<input ng-model="cache.gender" type="radio" name="gender" value="male"> Male
		<input ng-model="cache.gender" type="radio" name="gender" value="female"> Female
	</div>
	<button class="btn btn-primary btn-lg btn-block" ng-click="addUser('physicians',cache)">Add Physician</button>
</div>

<div id="emit-sidebar">
	<div class="emit-sidebar-option" ng-click="path('/dashboard')">
		<i class="icon icon-home"></i>
		<span>Dashboard</span>
	</div>
	<div class="emit-sidebar-option" ng-click="path('/dashboard/profile')">
		<i class="icon icon-edit"></i>
		<span>My Profile</span>
	</div>
	<div class="emit-sidebar-option" ng-click="path('/dashboard/vitals')">
		<i class="icon icon-heart"></i>
		<span>My Vitals</span>
	</div>
	<div class="emit-sidebar-option" ng-click="path('/')">
		<i class="icon icon-exit"></i>
		<span>Sign Out</span>
	</div>		
</div>

